{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pa-pos/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@pa-pos/ui": ["libs/ui/src/index.ts"],
      "@pa-pos/core/ui": ["libs/core/ui/src/index.ts"],
      "@pa-pos/dashboard/feature": ["libs/dashboard/feature/src/index.ts"],
      "@pa-pos/sales/feature": ["libs/sales/feature/src/index.ts"],
      "@pa-pos/dashboard/ui": ["libs/dashboard/ui/src/index.ts"],
      "@pa-pos/basic-data/feature": ["libs/basic-data/feature/src/index.ts"],
      "@pa-pos/basic-data/data-access": [
        "libs/basic-data/data-access/src/index.ts"
      ],
      "@pa-pos/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@pa-pos/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@pa-pos/inventory/feature": ["libs/inventory/feature/src/index.ts"],
      "@pa-pos/inventory/data-access": [
        "libs/inventory/data-access/src/index.ts"
      ],
      "@pa-pos/purchase/feature": ["libs/purchase/feature/src/index.ts"],
      "@pa-pos/purchase/data-access": ["libs/purchase/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
